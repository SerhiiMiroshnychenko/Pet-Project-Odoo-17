<odoo>
    <data>
        <!--Form view-->
        <record id="view_enemy_form" model="ir.ui.view">
            <field name="name">enemy.form</field>
            <field name="model">enemy</field>
            <field name="arch" type="xml">
                <form string="Enemy">
                    <sheet>
                        <group>
                            <field name="name" placeholder="Name"/>
                        </group>
                        <field name="badge" widget="image" class="badge-image"/>
                        <group groups="base.group_no_one">
                            <field name="army"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>
    </data>
</odoo>