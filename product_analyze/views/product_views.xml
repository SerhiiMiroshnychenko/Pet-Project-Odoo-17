<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="product_normal_form_view_inherit" model="ir.ui.view">
        <field name="name">product.product.form.inherit.stock.history</field>
        <field name="model">product.product</field>
        <field name="inherit_id" ref="product.product_normal_form_view"/>
        <field name="arch" type="xml">
            <xpath expr="//div[@name='button_box']" position="inside">
                <button name="show_stock_history"
                        type="object"
                        string="Stock History"
                        icon="fa-history"/>
            </xpath>
            <xpath expr="//notebook" position="inside">
                <page string="Stock Analysis" name="stock_analysis">
                    <group>
                        <group>
                            <field name="last_stock_update" readonly="1"/>
                        </group>
                    </group>
                    <group string="Stock Level History">
                        <field name="stock_history_plot" 
                               widget="image" 
                               options="{'size': [900, 400]}" 
                               readonly="1"
                               nolabel="1"/>
                    </group>
                    <group string="Stock Changes">
                        <field name="stock_changes_plot" 
                               widget="image" 
                               options="{'size': [900, 400]}" 
                               readonly="1"
                               nolabel="1"/>
                    </group>
                </page>
            </xpath>
        </field>
    </record>
</odoo>
