<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_stock_history_plot_wizard" model="ir.ui.view">
        <field name="name">stock.history.plot.wizard.form</field>
        <field name="model">stock.history.plot.wizard</field>
        <field name="arch" type="xml">
            <form string="Stock History Plot">
                <sheet>
                    <field name="product_id" invisible="1"/>
                    <div style="text-align: center;">
                        <field name="plot_image" widget="image" 
                               options="{'size': [900, 800]}" 
                               class="oe_inline"
                               nolabel="1"/>
                    </div>
                </sheet>
                <footer>
                    <button string="Close" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>
</odoo>
